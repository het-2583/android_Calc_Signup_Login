<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_title">
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ubn_r</item>
    </style>
    <style name="base_edt">
        <item name="android:background">@drawable/bg_edit1</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/ubn_r</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColorHint">#757474</item>
    </style>
    <style name="base_title_tv" parent="base_title">
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>
    <style name="edt_item">
        <item name="android:fontFamily">@font/ubn_r</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
</resources>